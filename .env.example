# Mangwale Voice Services Configuration
# Copy this to .env and add your API keys

# =============================================================================
# JWT Authentication (should match Jupiter's secret)
# =============================================================================
JWT_SECRET=mangwale_jwt_secret_2024

# =============================================================================
# Cloud ASR Providers (for fallback when local Whisper fails)
# =============================================================================

# Deepgram - Best for real-time, low latency (https://deepgram.com)
# - Nova-2 model: <300ms latency
# - 36+ languages including Hindi/Marathi
# - Free tier: $200 credit
DEEPGRAM_API_KEY=

# Google Cloud Speech-to-Text (https://cloud.google.com/speech-to-text)
# - Good Hindi support
# - Requires GCP project
GOOGLE_CLOUD_API_KEY=

# Azure Speech Services (https://azure.microsoft.com/en-us/services/cognitive-services/speech-services/)
# - Central India region recommended
AZURE_SPEECH_KEY=
AZURE_SPEECH_REGION=centralindia

# =============================================================================
# Cloud TTS Providers (for fallback when local XTTS fails)
# =============================================================================

# ElevenLabs - Best quality voices (https://elevenlabs.io)
# - Flash v2.5: ~75ms latency
# - 29 languages including Hindi
# - Free tier: 10K characters/month
ELEVENLABS_API_KEY=
ELEVENLABS_VOICE_ID=pNInz6obpgDQGcFmaJgB

# =============================================================================
# Provider Priority (comma-separated, first available wins)
# Options: local, deepgram, google, azure, elevenlabs
# =============================================================================
ASR_PROVIDER_PRIORITY=local,deepgram,google,azure
TTS_PROVIDER_PRIORITY=local,elevenlabs,deepgram,google,azure

# =============================================================================
# Real-time Features
# =============================================================================
ENABLE_VAD=true
VAD_SILENCE_THRESHOLD_MS=700
STREAMING_CHUNK_SIZE_MS=100
